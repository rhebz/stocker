<% begin %>
  <% @stock = StockQuote::Stock.quote(@stock.ticker)%>
<% rescue StandardError %>
 Hello Error
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @stock.name %> - <%= @stock.symbol %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-4">
     <h1>$  <%= @stock.l %> </h1>
    <strong>Earnings Per Share: </strong> <%= @stock.eps %> <br>
    <strong>Price/Earning Ratio: </strong> <%= @stock.pe %> <br>
    <strong>Market Cap: </strong> <%= @stock.mc %> <br>
    <strong>Stock Open: </strong> <%= @stock.op %> <br>
    <strong>Day's Range: </strong> <%= @stock.lo %> - <%= @stock.lo %><br>
    <strong>Year High: </strong> <%= @stock.hi52 %> <br>
    <strong>Year Low: </strong> <%= @stock.lo52 %> <br><br>
    </div>
    <div class="col-md-8"><br>
      <p align="justify"><%= @stock.summary[0]['overview'] %></p>
    </div>
  </div>
  <div class="panel-footer"><%= link_to 'Edit', edit_stock_path(@stock) %> |
<%= link_to 'Remove Stock', stock_path(@stock), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', stocks_path %>
</div>
</div>





